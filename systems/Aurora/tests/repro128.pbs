CMD="mpiexec -np 1536 -ppn 12  -envall \
	     ./gpu_tile_compact.sh \
	     ./Test_dwf_mixedcg_prec --mpi 4.4.4.24 --grid 128.128.128.384 \
		--shm-mpi 1 --shm 4096 --device-mem 32000 --accelerator-threads 32 --seconds 7000 --comms-overlap "
