# 12 ppn, 32 nodes, 384 ranks
#
CMD="mpiexec -np 3072 -ppn 12  -envall \
	     ./gpu_tile_compact.sh \
	     ./Benchmark_comms_host_device --mpi 8.6.8.8 --grid 32.24.32.192 \
		--shm-mpi 1 --shm 2048 --device-mem 32000 --accelerator-threads 32"

$CMD 

CMD="mpiexec -np 3072 -ppn 12  -envall \
	     ./gpu_tile_compact.sh \
